@model CocukYazini.Models.Entity.categorytable
@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




@using (Html.BeginForm("Guncelle", "Category", FormMethod.Post))

{
    

    <h4>Kategori Güncelle</h4>
    <hr />
    <div class="form-control-static">

        <label>Kategori ID</label>
        @Html.TextBoxFor(m => m.id, new { @readonly = "readonly" })<br />
        <label>Kategori Adı</label>

        @Html.TextBoxFor(m => m.categoryname , new { @required = "required" ,@class="form-control"})<br />
        <label>Kategori Adı</label>
        <select name="isaktif" class="form-control">
            <option value="1">Aktif Kategori</option>
            <option value="2">Pasif Kategori</option>

        </select>
        <br />


        <br />

        <div>
            <label></label> <button class="btn btn-info">GÜNCELLE</button>

        </div>
    </div>

}