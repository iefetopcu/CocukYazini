
@{
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Çocuk Yazını Panel</title>
    <meta name="description" content="A high-quality &amp; free Bootstrap admin dashboard template pack that comes with lots of templates and components.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" id="main-stylesheet" data-version="1.1.0" href="~/adminstyle/shards-dashboards.1.1.0.min.css">
    <link rel="stylesheet" href="~/adminstyle/extras.1.1.0.min.css">
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    
        .pagination li {
            margin-left: 20px !important;
            color: orangered !important;
        }
</style>
<!------ Include the above in your HEAD tag ---------->
<body class="h-100">


    <div class="container-fluid">
        <div class="row">
            <!-- Main Sidebar -->
            <aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
                <div class="main-navbar">
                    <nav class="navbar align-items-stretch navbar-light bg-white flex-md-nowrap border-bottom p-0">
                        <a class="navbar-brand w-100 mr-0" href="@Url.Action("Index", "Home")" style="line-height: 25px;">
                            <div class="d-table m-auto">

                                <span class="d-none d-md-inline ml-1">Çocuk Yazını</span>
                            </div>
                        </a>

                    </nav>
                </div>

                <div class="nav-wrapper">


                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Admin")">
                                <i class="material-icons">edit</i>
                                <span>Anasayfa</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index", "Post")">
                                <i class="material-icons">vertical_split</i>
                                <span>İçerikler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index", "Category")">
                                <i class="material-icons">vertical_split</i>
                                <span>Kategori</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index", "Users")">
                                <i class="material-icons">group</i>
                                <span>Kullanıcılar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index", "Messages")">
                                <i class="material-icons">email</i>
                                <span>Mesajlar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("CocukYaziniTV", "Admin")">
                                <i class="material-icons">live_tv</i>
                                <span>Çocuk Yazını TV</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Reklam", "Admin")">
                                <i class="material-icons">attach_money</i>
                                <span>Reklam</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Bulten", "Admin")">
                                <i class="material-icons">attach_email</i>
                                <span>Bülten</span>
                            </a>
                        </li>



                    </ul>
                </div>
            </aside>
            <!-- End Main Sidebar -->
            <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
                <div class="main-navbar sticky-top bg-white">
                    <!-- Main Navbar -->
                    <nav class="navbar align-items-stretch navbar-light flex-md-nowrap p-0">
                        <form action="#" class="main-navbar__search w-100 d-none d-md-flex d-lg-flex">
                            <div class="input-group input-group-seamless ml-3">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">

                                    </div>
                                </div>

                            </div>
                        </form>
                        <ul class="navbar-nav border-left flex-row ">
                            <li class="nav-item border-right dropdown notifications">

                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-nowrap px-3" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    <img class="user-avatar rounded-circle mr-2" src="@(((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).userphoto)">
                                    <span class="d-none d-md-inline-block">@(Session["MySessionUser"] != null ? ((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).username : "") @(Session["MySessionUser"] != null ? ((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).usersurname : "")</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-small">


                                    <a class="dropdown-item" href="@Url.Action("NewPost", "Post")">
                                        <i class="material-icons">note_add</i> Yeni İçerik Ekle
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" href="@Url.Action("LogOut", "Home")">
                                        <i class="material-icons text-danger">&#xE879;</i> Çıkış Yap
                                    </a>
                                </div>
                            </li>
                        </ul>
                        <nav class="nav">
                            <a href="#" class="nav-link nav-link-icon toggle-sidebar d-md-inline d-lg-none text-center border-left" data-toggle="collapse" data-target=".header-navbar" aria-expanded="false" aria-controls="header-navbar">
                                <i class="material-icons">&#xE5D2;</i>
                            </a>
                        </nav>
                    </nav>
                </div>
                <!-- / .main-navbar -->
                <div class="main-content-container container-fluid px-4">
                    <!-- Page Header -->

                    @RenderBody()
                </div>
                <footer class="main-footer d-flex p-2 px-3 bg-white border-top">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("NewPost", "Post")">İçerik Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("NewUser", "Users")">Kullanıcı Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("NewCategory", "Category")">Kategori Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Slider", "Admin")">Slider'ı Düzenle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dosyaadi", "Admin")">Dosya</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Sorusturma", "Admin")">Soruşturma</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DosyaUpload", "Admin")">Fotoğraflar</a>
                        </li>
                    </ul>
                   
                </footer>
            </main>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    @*<script src="https://unpkg.com/shards-ui@latest/dist/js/shards.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sharrre/2.0.1/jquery.sharrre.min.js"></script>
    <script src="~/Scripts/shards-dashboards.1.1.0.min.js"></script>
    <script src="~/Scripts/app/app-blog-overview.1.1.0.js"></script>
</body>

