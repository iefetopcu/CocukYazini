
@model CocukYazini.Models.Entity.posttable
@{
    ViewBag.Title = Model.posttitle;
    ViewBag.Description = Model.postspot;
    Layout = "~/Views/Shared/_Layout - EN.cshtml";
}

<section class="utf_block_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="single-post">
                    <div class="utf_post_title-area">
                        <a class="utf_post_cat text-white">@Model.categorytable.categoryname</a>
                        <h2 class="utf_post_title">@Model.posttitle</h2>
                        <div class="utf_post_meta">
                            <span class="utf_post_author"> Author :  <a href="@Url.Action("UserPosts", "Home" , new {id = @Model.userid})">@Model.usertable.username @Model.usertable.usersurname </a> </span>
                            <span class="utf_post_date"><i class="fa fa-clock-o"></i> @Model.posttime.Value.ToString("dd.MM.yyyy")</span>
                        </div>
                    </div>

                    <div class="utf_post_content-area">
                        <div class="post-media post-audio">
                            <div class="embed-responsive">
                                <img src="@Model.postphoto" class="img-responsive" style="width:100%!important" />
                            </div>
                        </div>

                        <div class="entry-content">
                            <p>@Model.postspot</p>
                            @Html.Raw(Model.postcontent)

                        </div>



                        <div class="share-items clearfix">

                            <div class="col-lg-3">
                                <h4>Share </h4>
                            </div>
                            <div class="col-lg-9">
                                <ul class="post-social-icons unstyled">

                                    <li class="facebook"> <a href="https://www.facebook.com/sharer/sharer.php?u=@Request.Url.ToString()"> <i class="fa fa-facebook"></i> <span class="ts-social-title">Facebook</span></a> </li>
                                    <li class="twitter"> <a href="http://www.twitter.com/share? &url=@Request.Url.ToString()"> <i class="fa fa-twitter"></i> <span class="ts-social-title">Twitter</span></a> </li>
                                    <li style="background-color:forestgreen;"> <a href="https://wa.me/?text= @Model.posttitle @Request.Url.ToString()"> <i class="fa fa-whatsapp"></i> <span class="ts-social-title">WhatsApp</span></a> </li>

                                </ul>
                            </div>

                        </div>
                    </div>
                </div>

                <p><i style="color:chocolate">The website is subject to the Law of Intellectual Property rights and everything about its contexts such as audio, visual, pieces of information which consist of text, brand and all kind of intellectual property rights and other intellectual and industrial property rights belong to the Çocuk Yazını.</i></p>
            </div>


        </div>
    </div>
</section>