@using CocukYazini.Models.Entity
@model List<usertable>
@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
    <style>
        .userlist {
            font-family: Calibri;
            font-size: 14pt;
            border: solid 1px;
            float: left;
            height: 250px;
            width: 250px;
            margin: 3px;
        }

            
            
            .userlist img{
                padding:5px;
            }
            .userlist p{
                margin:5px;
            }
    </style>
    <div class="page-header row no-gutters py-4">
        <div class="col-6 col-sm-6 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Kullanıcı Yönetimi</span>
        </div>


        <div class="col-6 col-sm-6 text-center mb-0 ">
            <div>
               
                <a href="@Url.Action("NewUser", "Users")"> <button class="btn btn-info">Yeni Kullanıcı Ekle</button></a>
            </div>
        </div>
    </div>

        
      

        


    <div class="row">
        @foreach (var users in Model)
        {
            <div class="col-lg-3">
                <div class="card card-small mb-4 pt-3">
                    <div class="card-header border-bottom text-center">
                        <div class="mb-3 mx-auto">
                            <img class="rounded-circle" src="@users.userphoto" alt="User Avatar" width="110" height="150">
                        </div>
                        <h4 class="mb-2">@users.username @users.usersurname</h4>

                        <a href="@Url.Action("Sil", "Users" , new { id = users.id })" onclick="return confirm('Bu Kullanıcıyı Silmek İstediğinize Emin Misiniz?')">
                            <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                                <i class="material-icons mr-1"></i>Sil
                            </button>
                        </a>
                        <a href="@Url.Action("ShowUser", "Users" , new { id = users.id })">
                            <button type="button" class="mb-2 btn btn-sm btn-pill btn-outline-primary mr-2">
                                <i class="material-icons mr-1"></i>Düzenle
                            </button>
                        </a>
                    </div>
                    
                </div>
            </div>
        }

    </div>


    