<div class="container">
    
   

    <br />
    
        
    <div class="row">


        

        
        <div class="col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Kullanıcı Sayısı
                    <span class="badge badge-primary badge-pill">@ViewBag.kullanicilar</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Aktif Kullanıcı
                    <span class="badge badge-primary badge-pill">@ViewBag.kullaniciaktif</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Yasaklı Kullanıcı
                    <span class="badge badge-primary badge-pill">@ViewBag.kullanicipasif</span>
                </li>
            </ul>
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
           

            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    İçerik Sayısı
                    <span class="badge badge-primary badge-pill">@ViewBag.icerikler</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Aktif İçerik
                    <span class="badge badge-primary badge-pill">@ViewBag.postaktif</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Pasif  İçerik
                    <span class="badge badge-primary badge-pill">@ViewBag.postpasif</span>
                </li>
            </ul>
        </div>



        <div class="col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
           

            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Kategori Sayısı
                    <span class="badge badge-primary badge-pill">@ViewBag.kategoriler</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Aktif Kategori
                    <span class="badge badge-primary badge-pill">@ViewBag.kategoriaktif</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Pasif Kategori
                    <span class="badge badge-primary badge-pill">@ViewBag.kategoripasif</span>
                </li>
            </ul>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
           

            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Mesaj Sayısı
                    <span class="badge badge-primary badge-pill">@ViewBag.mesajlar</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center" >
                    Okunmamış Mesaj
                    <span class="badge badge-primary badge-pill">@ViewBag.mesajokunmamis</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Okunmuş Mesaj
                    <span class="badge badge-primary badge-pill">@ViewBag.mesajokunmus</span>
                </li>
            </ul>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h4>Hızlı İşlemler</h4>
            <hr />





            <a href="@Url.Action("NewPost", "Post")" class="stretched-link text-danger">Yeni İçerik Ekle</a> |
            <a href="@Url.Action("NewUser", "Users")" class="stretched-link text-danger">Yeni Kullanıcı Ekle</a> |
            <a href="@Url.Action("NewCategory", "Category")" class="stretched-link text-danger">Yeni Kategori Ekle</a> |

            <a href="@Url.Action("Slider", "Admin")" class="stretched-link text-danger">Slider'ı Düzenle</a> |
            <a href="@Url.Action("Dosyaadi", "Admin")" class="stretched-link text-danger">Yeni Dosya Adı'ı Ekle</a> |
            <a href="@Url.Action("Sorusturma", "Admin")" class="stretched-link text-danger">Soruşturma Düzenle</a>


        </div>    
        </div>



    </div>

