@using CocukYazini.Models.Entity



        <div class="row mt-5">
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <div class="footer-widget">
                    <h2>İletişime Geç</h2>
                    <div class="footer-widget-content">
                        <br />
                        <a href="mailto:infococukyazini@gmail.com" class="contact-link"><i class="fa fa-envelope" style="font-size:24px;"></i></a>
                        <a href="https://www.instagram.com/cocukyazini/" class="contact-link"><i class="fa fa-instagram" style="font-size:24px; margin-left:10px;"></i></a>
                        
                        <a href="https://www.youtube.com/channel/UCEFxedCZbBncrDYAuaRKzsQ" class="contact-link" title="Rss"><i class="fa fa-youtube" style="font-size:24px; margin-left:10px;"></i></a>
                        <a href="https://www.facebook.com/cocukyaziniwebsite/" class="contact-link" title="Facebook"><i class="fa fa-facebook" style="font-size:24px; margin-left:10px;"></i></a>
                        <a href="https://twitter.com/cocuk_yazini" class="contact-link" title="Twitter"><i class="fa fa-twitter" style="font-size:24px; margin-left:10px;"></i></a>
                        <br /><br />
                        
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <div class="footer-widget">
                    <h2>Son Yazılar</h2>

                    <div class="footer-widget-content">

                        @foreach (var footerpost in Model)
                        {
                            <div class="media">
                                <div class="media-left">
                                    <img class="media-object" src="@footerpost.previewphoto" height="80px" width="80px">
                                </div>
                                <div class="media-body">
                                    <span><h4>@footerpost.posttitle</h4></span><br />

                                    <span><h4 style="color:brown">@footerpost.categorytable.categoryname</h4></span>
                                    <i><span><b>@footerpost.usertable.username @footerpost.usertable.usersurname</b></span><br /></i>
                                </div>
                            </div>

                            }




                        </div>

                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <div class="footer-widget">
                    <h2><a href="@Url.Action("Index", "Duyuruhaber")">Duyuru&Haber</a></h2>
                    <h2><a href="@Url.Action("Index", "Arsiv")"> <img src="~/Photos/menu/en.JPG" height="20" width=35" /> EN</a></h2>
                    
                </div>
            </div>

            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-33">
                <div class="footer-widget">
                    <h2>İletişim Formu</h2>
                    <h5>Aşağıdaki formu kullanarak bize yazabilirsin.</h5>
                    <div class="footer-widget-content">
                        <div class="images-gellary">
                            <form action="@Url.Action("NewContact", "Home")" method="post">
                                <input type="text" placeholder="BAŞLIK" class="form-control form-control-sm" name="contacttitle" required="required" style="margin-top:5px;"/>
                                <textarea placeholder="MESAJINIZ" rows="3" cols="22" class="form-control form-control-sm" name="contactcontent" required="required" style="margin-top:5px;"></textarea>
                                <input type="email" placeholder="E-Mail" class="form-control form-control-sm" name="email" required="required" style="margin-top:5px;"/>
                                <input type="text" placeholder="Kim Yazıyor?" class="form-control form-control-sm" name="whowrote" required="required" style="margin-top:5px;"/>


                                <button class="btn btn-info" style="margin-top:5px;">GÖNDER</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
