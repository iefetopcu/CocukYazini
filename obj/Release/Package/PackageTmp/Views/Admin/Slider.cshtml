@using CocukYazini.Models.Entity
@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    .container {
        margin-left: 200px;
    }

    .kategoritablo tr th {
        color: black;
        width: 200px;
        height: 50px;
    }

    .kategoriler {
        height: 35px;
        border-bottom: 1px solid;
        border-color: dodgerblue;
    }
</style>
<div class="container">
    <h4>Slider</h4>
    <hr />
    <table class="table table-bordered">
        <tr>        
            
            <th>Slider URL</th>
            <th>Dil ve Durum</th>
            <th>Slider Önizleme</th>
            <th>İşlem</th>
        </tr>
        <tbody>
            @foreach (var slider in Model)
            {
            <tr class="kategoriler">             
               
                <td>@slider.sliderurl</td>
               @if (slider.isaktif == 1) {
               <td>Türkçe</td>
               }
               @if (slider.isaktif == 3)
               {
                   <td>İngilizce</td>
               }
               <td><img src="@slider.sliderpath" height="60px" /></td>
                <td>
                    <a href="@Url.Action("SliderSil", "Admin" , new {id = slider.id})" onclick="return confirm('Bu Slideri Silmek İstediğinize Emin Misiniz?')"><i class="glyphicon glyphicon-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <br /><br />
    <a href="@Url.Action("NewSlider", "Admin")"> <button class="btn btn-info">Yeni Slider Ekle</button></a>
</div>

