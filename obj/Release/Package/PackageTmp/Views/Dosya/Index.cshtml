@using CocukYazini.Models.Entity

@{
    ViewBag.Title = "Dosya";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="utf_block_wrapper pb-top-0">
    <div class="container">
        <div class="row">
            @foreach (var dosya in Model)
            { 
            <div class="col-lg-6 col-md-12 mt-5">
                <div class="block color-orange">
                    <a href="@Url.Action("AylikDosya", "Dosya", new {id = dosya.id})">

                        <h3 class="utf_block_title"><span>@dosya.monthname</span></h3>


                    </a>
                    <a href="@Url.Action("AylikDosya", "Dosya", new {id = dosya.id})">
                        <img src="@dosya.monthphotourl" style="width:100%" />

                    </a>


                    
                </div>
            </div>
            
            }
                


            </div>
    </div>
</section>