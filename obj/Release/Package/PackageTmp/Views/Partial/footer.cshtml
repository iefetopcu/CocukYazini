@using CocukYazini.Models.Entity
@using CocukYazini.App_Code



<footer id="footer" class="footer">
    <div class="utf_footer_main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2 col-sm-12 col-xs-12 footer-widget contact-widget">
                    
                    <div class="row">
                        <div class="col-lg-12">
                            <img src="~/Photos/logo/cocukcircle.png" style="width:40%!important; margin-left:15px;"/>
                        </div>
                    </div>

                    <ul class="unstyled utf_footer_social">
                        <li><a title="Facebook" href="https://www.facebook.com/cocukyaziniwebsite/" target="_blank"><i class="fa fa-facebook"></i></a></li>
                        <li><a title="Twitter" href="https://twitter.com/cocuk_yazini" target="_blank"><i class="fa fa-twitter"></i></a></li>
                        <li><a title="Instagram" href="https://www.instagram.com/cocukyazini/" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        <li><a title="Linkdin" href="https://www.youtube.com/channel/UCEFxedCZbBncrDYAuaRKzsQ" target="_blank"><i class="fa fa-youtube"></i></a></li>


                    </ul>
                    <a href=@Url.Action("IndexEN","Home")><img src="https://i4.hurimg.com/i/hurriyet/75/750x422/55ea65fdf018fbb8f87d5486.jpg" height="20" /></a>

                </div>
                <div class="col-lg-3 col-sm-12 col-xs-12 footer-widget">
                    <h3 class="widget-title">Son Yazılar</h3>
                    <div class="utf_list_post_block">
                        <ul class="utf_list_post">

                            @foreach (var footerpost in Model)
                            {
                                
                                <li class="clearfix">
                                    <div class="utf_post_block_style post-float clearfix">
                                        <div class="utf_post_thumb"> <a href="@Url.Action("PostRead", "Home", new {id = footerpost.id,baslik=Seo.AdresDuzenle(footerpost.posttitle)})"> <img class="img-fluid" src="@footerpost.previewphoto" alt="" /> </a> </div>
                                        <div class="utf_post_content">
                                            <h2 class="utf_post_title title-small"> <a href="@Url.Action("PostRead", "Home", new {id = footerpost.id,baslik=Seo.AdresDuzenle(footerpost.posttitle)})">@footerpost.posttitle</a> </h2>
                                            <div class="utf_post_meta"> <span class="utf_post_date"><i class="fa fa-arrow-circle-right"></i> @footerpost.categorytable.categoryname</span> </div>
                                        </div>
                                    </div>
                                </li>
                            }



                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-12 col-xs-12 footer-widget widget-categories">
                    <h3 class="widget-title">Duyuru & Haber</h3>
                    <div class="utf_list_post_block">
                        <ul class="utf_list_post">
                            @{Html.RenderAction("duyuruhaber", "Partial");}
                        </ul>

                            
                    </div>
                    </div>
                <div class="col-lg-4 col-sm-12 col-xs-12 footer-widget contact-widget">
                    <h3 class="widget-title">Abone Ol</h3>
                    <p>Yeni içeriklerimizden haberdar olmak için aşağıdaki formu doldurabilirsin!</p>
                    <form action="@Url.Action("Ebulten", "Home")" method="post" class="form-group">
                        <input type="email" placeholder="E-Mail" class="form-control" name="email" required="required" style="margin:0px!important; width:100%!important;" />
                        <br />
                        <input type="checkbox" required /> Çocuk yazınından haber almak istiyorum , bu amaçla <a href="#" data-toggle="modal" data-target="#kvkkmodal">E-bülten Kişisel Veriler Aydınlatma Metni</a>"ni okudum ve “E-ileti ve Kişisel Veriler Onay Metni"ni kabul ediyorum.
                        <br />
                        <button class="btn btn-secondary" style="margin-top:5px; ">GÖNDER</button>
                    </form>
                </div>


            </div>
        </div>
    </div>
</footer>