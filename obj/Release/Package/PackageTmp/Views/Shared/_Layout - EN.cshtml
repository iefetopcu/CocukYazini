                        </a>



                        <h4>
                            <img src="@(((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).userphoto )" height="40" width="40" style=" border: 1px solid #999;
        -webkit-border-radius: 8px;
        -moz-border-radius: 8px;
        border-radius: 8px;" class="userphoto" />

                            @(Session["MySessionUser"] != null ? ((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).username : "")
                            @(Session["MySessionUser"] != null ? ((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).usersurname : "")
                        </h4>
                    }
                    else
                    {
                        <a href='#myModalNewLogin' data-toggle="modal" class="sessionlink">
                            <span class="glyphicon glyphicon-user"> </span>
                        </a>
                        <a href='#myModal' data-toggle="modal" class="sessionlink">
                            <span class="glyphicon glyphicon-log-in"> </span>
                        </a>
                        <a href='#SearchModal' data-toggle="modal" class="sessionlink">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                    }



                </div>
            </div>
        </div>


        <nav class="navbar navbar-light navbar-expand-lg sticky-top pull-right">
            <button type="button" class="navbar-toggler ml-auto" data-toggle="collapse" data-target="#NavbarContentID" area-expanded="false" aria-label="toggler Button" aria-controls="NavbarContentID"> <span class="navbar-toggler-icon"></span></button>

            <div class="row pull-right">
                <div id="NavbarContentID" class="collapse navbar-collapse ml-auto" style="font-size:18px;">
                    <ul class="navbar-nav ml-auto text-right">
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "Home")" class="nav-link"><b>Homepage</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "About")" class="nav-link"><b>About</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "Dosya")" class="nav-link"><b>Agenda</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "Kritik")" class="nav-link"><b>Critique</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "Sinemasal")" class="nav-link"><b>Cinema</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "Sorusturma")" class="nav-link"><b>Inquiry</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("IndexEN", "Roportaj")" class="nav-link"><b>Interview</b></a></li>
                        <li class="nav-item"><a href="@Url.Action("Index", "Home")" class="nav-link"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b4/Flag_of_Turkey.svg/2000px-Flag_of_Turkey.svg.png" alt="Türkçe diline geç" height="20" /></a></li>
                        @{
                            if (Session["MySessionUser"] != null)
                            {
                                if (((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).authority == 1)
                                {
                                    <li class="nav-item"><a href="@Url.Action("Index", "Admin")" class="nav-link"><span class="glyphicon glyphicon-wrench"></span></a></li>
                                }
                            }
                            else
                            {

                            }
                        }




                    </ul>
                </div>

            </div>




        </nav>

    </div>



    @RenderBody()
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @{Html.RenderAction("footerreklam", "Partial");}
            </div>
        </div>
    </div>
    <div class="container-fluid">

        @{Html.RenderAction("footerEN", "Partial");}
        <div class="row footerlinks" style="background-color:dimgray; color:white;">
            <div class="col-lg-8">
                This website was designed by <a href="https://www.artedijital.com/">Artedijital </a>
            </div>
            <div class="col-lg-4">
                <a href='#contactModal' data-toggle="modal" class="pull-right">Contact</a>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

