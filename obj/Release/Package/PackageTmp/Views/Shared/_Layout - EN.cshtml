            </div>

            <div class="col-6 mobillogin">
                <div class="pull-right">

                    @if (Session["MySessionUser"] != null)
                    {

                        <a href='@Url.Action("ShowUser", "Home" , new {id = ((CocukYazini.Models.Entity.usertable)Session["MySessionUser"]).id})' class="sessionlink">
